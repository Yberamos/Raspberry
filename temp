
- name: Setting up leader
  hosts: manager
  remote_user: yberamos
  roles:
    - swarm_init

- name: Adding workers
  hosts: workers
  remote_user: yberamos
  roles:
    - swarm_add_worker

- name: Rebooting all hosts
  hosts: raspberries
  become: true
  remote_user: yberamos
  roles:
    - reboot