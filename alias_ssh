---
- hosts: rp1
  remote_user: pi

  tasks:
  - name: add alias
    become: true
    blockinfile:
      path: /home/pi/.bashrc
      block: |
      alias rp1='ssh pi@192.168.1.44'
      alias rp1='ssh pi@192.168.1.45'
      alias rp1='ssh pi@192.168.1.46'
      alias rp1='ssh pi@192.168.1.47'
  
  - name: run source
    become: true
    command: /home/pi/.bashrc